# Отключение просмотра списка файлов директории
Options -indexes

# название веба
Header set Web 1

#Options +ExecCGI
#Action php-cgi /cgi-bin/php-wrapper-s3r.fcgi
#Action php5-cgi /cgi-bin/php-wrapper-s3r.fcgi
#AddHandler php5-cgi .php

# если используется PHP Дримхоста, замечено, что выводятся ошибки
# непомогло
#php_flag display_errors off
#php_value error_reporting 0 

# Страницы ошибок
ErrorDocument 400 /errors/404.html
ErrorDocument 401 /errors/404.html
ErrorDocument 403 /errors/404.html
ErrorDocument 404 /errors/404.html
ErrorDocument 500 /errors/500.html

# Управление кэшированием
<IfModule mod_headers.c>
  ExpiresActive  On
  ExpiresDefault  "access plus 1 day"
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # http://bsds.etapasvi.com/issues/126
  RequestHeader unset Range
  RequestHeader unset Request-Range
  
  # http://habrahabr.ru/blogs/infosecurity/127029/#comment_4191083
  #RewriteCond %{HTTP:Range} bytes=0-.* [NC]
  #RewriteRule .? http://%{SERVER_NAME}/ [R=302,L]
  
  # Запрет доступа к .conf файлам (nginx)
  RewriteRule .conf$ /errors/404.html
  
  # проверка доменного имени и рекдирект на домен по умолчанию, если передан неверный
  # учитывать, что доменное имя хардкодится в .php
  RewriteCond %{HTTP_HOST} !^(.*\.etapasvi\.com|etapasvi\.com)$
  RewriteRule ^ http://www.etapasvi.com [L,R=301]

  # Перезапись отключена для:  
  # - в запросе есть точка, т.е запрашивается файл
  # - запрашиваемый файл находится в специальной директории
  #RewriteCond %{REQUEST_FILENAME} -f [OR] 
  
  # - если запрошен файл не из папки кэша (http://www.etapasvi.com/cache/www.etapasvi.com/en/i.html)
  # привело к тому, что стал отдаваться пустой кэш
  #RewriteCond %{REQUEST_URI} !^/cache/
  RewriteCond %{REQUEST_URI} ^.*\..*$ [OR] 
  RewriteCond %{REQUEST_URI} ^/(css|errors|i|js|php_backend|sf_data_lsdfkr|swf|uploads|stats|backup_download)/
  RewriteRule .* - [L]

  # uncomment the following line, if you are having trouble
  # getting no_script_name to work
  #RewriteBase /

  # we skip all files with .something
  #RewriteCond %{REQUEST_URI} \..+$
  #RewriteCond %{REQUEST_URI} !\.html$
  #RewriteRule .* - [L]
 
  # Редирект на версию языка, соответствующую языку установленному в браузере
  RewriteCond %{HTTP:Accept-Language} ^ru.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/ru/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^en.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/en/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^cs.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/cs/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^hu.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/hu/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^pl.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/pl/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^fr.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/fr/ [L,R=301]
  
  RewriteCond %{HTTP:Accept-Language} ^zh.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/zh_CN/ [L,R=301]  
  
  RewriteCond %{HTTP:Accept-Language} ^vi.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/vi/ [L,R=301] 

  RewriteCond %{HTTP:Accept-Language} ^ja.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/ja/ [L,R=301] 
  
  RewriteCond %{HTTP:Accept-Language} ^es.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/es/ [L,R=301]
  
  RewriteCond %{HTTP:Accept-Language} ^it.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/it/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} ^et.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/et/ [L,R=301]
  
  RewriteCond %{HTTP:Accept-Language} ^ne.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/ne/ [L,R=301]
  
  RewriteCond %{HTTP:Accept-Language} ^bn.* [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/bn/ [L,R=301]

  RewriteCond %{HTTP:Accept-Language} !^(en.*|ru.*|cs.*|hu.*|pl.*|fr.*|zh.*|vi.*|ja.*|es.*|it.*|et.*|ne.*|bn.*) [NC]
  RewriteRule ^$ http://%{HTTP_HOST}/en/ [L,R=301]

  # Добавление слэша в конце языка: /ru -> /ru/
  RewriteCond %{REQUEST_URI} ^/(en|ru|cs|hu|pl|fr|zh_CN|vi|ja|es|it|et|ne|bn)$ [NC]
  RewriteRule ^ http://%{HTTP_HOST}%{REQUEST_URI}/ [L,R=301]

  # Редирект на мобильную версию
  # с Полной версии
  RewriteCond %{HTTP_HOST} ^.*www.etapasvi.com$
  # только с главной страницы
  RewriteCond %{REQUEST_URI} ^/[^/]+/$
  # мобильное устройство
  RewriteCond %{HTTP_USER_AGENT} android|avantgo|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge\ |maemo|midp|mmp|opera\ m(ob|in)i|palm(\ os)?|phone|p(ixi|re)\/|plucker|pocket|psp|symbian|treo|up\.(browser|link)|vodafone|wap|windows\ (ce|phone)|xda|xiino [NC,OR]
  RewriteCond %{HTTP_USER_AGENT} ^(1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a\ wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r\ |s\ )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1\ u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp(\ i|ip)|hs\-c|ht(c(\-|\ |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac(\ |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt(\ |\/)|klon|kpt\ |kwc\-|kyo(c|k)|le(no|xi)|lg(\ g|\/(k|l|u)|50|54|e\-|e\/|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(di|rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-|\ |o|v)|zz)|mt(50|p1|v\ )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v\ )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-|\ )|webc|whit|wi(g\ |nc|nw)|wmlb|wonu|x700|xda(\-|2|g)|yas\-|your|zeto|zte\-) [NC]
  # перешли не по ссылке на сайте
  RewriteCond %{HTTP_REFERER} !^.*www.etapasvi.com.*$
  RewriteRule ^ http://m.etapasvi.com%{REQUEST_URI} [L,R=301]

  # Если в кэше домена есть страница, берём её оттуда (sfSuperCachePlugin )
  
  #RewriteCond %{REQUEST_METHOD} GET
  #RewriteCond %{HTTP_HOST} !^m.etapasvi.com$
  # Хардкод, чтобы кэширование работало только в основном бэкенде
  #RewriteCond %{DOCUMENT_ROOT}/main_back.conf -f
  RewriteCond %{DOCUMENT_ROOT}/cache/%{HTTP_HOST}/%{REQUEST_URI}i.html -f
  RewriteRule ^(.*) cache/%{HTTP_HOST}/$1i.html [L]
  
  # Передача управления контроллеру
  # мобильная версия
  RewriteCond %{HTTP_HOST} ^.*m.etapasvi.com$
  RewriteRule ^(.*)$ frontend_m_etapasvi_com.php [QSA,L]

  # обычная версия
  RewriteRule ^(.*)$ frontend_www_etapasvi_com.php [QSA,L]
  
</IfModule>