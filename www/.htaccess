# если размещать в вышестоящем .htaccess, на некоторых площадках потом
# не удаётся отключить с помощью Allow
Require user dev

# Если находимся не на перечисленных доменах, требуется авторизация
SetEnvIfNoCase Host ^(etapasvi\.com|www.etapasvi\.com|m.etapasvi\.com)$ nopassreq

Order Allow,Deny
Allow from env=nopassreq
# внешние IP сервера, на котором запускается пингер
Allow from 69.163.225.189 173.236.247.197
Satisfy any

# Отключение просмотра списка файлов директории
Options -indexes

# название веба - указывается в вышележащем .htaccess
#Header set Web ?

#Options +ExecCGI
#Action php-cgi /cgi-bin/php-wrapper-s3r.fcgi
#Action php5-cgi /cgi-bin/php-wrapper-s3r.fcgi
#AddHandler php5-cgi .php

# если используется PHP Дримхоста, замечено, что выводятся ошибки
# непомогло
#php_flag display_errors off
#php_value error_reporting 0 

# Страницы ошибок
ErrorDocument 400 /errors/404.html
ErrorDocument 401 /errors/404.html
ErrorDocument 403 /errors/404.html
ErrorDocument 404 /errors/404.html
ErrorDocument 500 /errors/500.html

# Управление кэшированием
#<IfModule mod_headers.c>
#<IfModule mod_expires.c>

ExpiresActive  On
ExpiresDefault  "access plus 1 day"

#</IfModule>

#<IfModule mod_rewrite.c>

RewriteEngine On

# Если веб-директория на сервере находится не в /www/, вышестоящий .htaccess редиректит в /www/
# поэтому %{REQUEST_URI} начинается с /www/, это учитываем

# почему-то не сработало
#SetEnv ORIGINAL_REQUEST_URI 123

# http://bsds.etapasvi.com/issues/126
RequestHeader unset Range
RequestHeader unset Request-Range

# http://habrahabr.ru/blogs/infosecurity/127029/#comment_4191083
#RewriteCond %{HTTP:Range} bytes=0-.* [NC]
#RewriteRule .? http://%{SERVER_NAME}/ [R=302,L]

# Запрет доступа к .конфигурационным файлам
RewriteRule (\.conf|\.htaccess|\.htpasswd)$ /errors/404.html

# проверка доменного имени и рекдирект на домен по умолчанию, если передан неверный
# учитывать, что доменное имя хардкодится в .php
RewriteCond %{HTTP_HOST} !^.*\.etapasvi\.com$
RewriteRule ^(.*)$ http://www.etapasvi.com/$1 [L,R=301]

# Перезапись отключена для:  
# - в запросе есть точка, т.е запрашивается файл
# - запрашиваемый файл находится в специальной директории
#RewriteCond %{REQUEST_FILENAME} -f [OR]

# - если запрошен файл не из папки кэша (http://www.etapasvi.com/cache/www.etapasvi.com/en/i.html)
# привело к тому, что стал отдаваться пустой кэш
#RewriteCond %{REQUEST_URI} !^/cache/
RewriteCond %{REQUEST_URI} ^.*\..*$ [OR] 
RewriteCond %{REQUEST_URI} ^/(www/)?(css|errors|i|js|php_backend|sf_data_lsdfkr|swf|uploads|stats|backup_download)/
RewriteRule .* - [L]

# uncomment the following line, if you are having trouble
# getting no_script_name to work
#RewriteBase /

# Редирект на версию языка, соответствующую языку установленному в браузере
RewriteCond %{HTTP:Accept-Language} ^ru.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/ru/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^en.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/en/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^cs.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/cs/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^hu.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/hu/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^pl.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/pl/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^fr.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/fr/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^zh.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/zh_CN/ [L,R=301]  

RewriteCond %{HTTP:Accept-Language} ^vi.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/vi/ [L,R=301] 

RewriteCond %{HTTP:Accept-Language} ^ja.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/ja/ [L,R=301] 

RewriteCond %{HTTP:Accept-Language} ^es.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/es/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^it.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/it/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^et.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/et/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^ne.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/ne/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} ^bn.* [NC]
RewriteRule ^$ http://%{HTTP_HOST}/bn/ [L,R=301]

RewriteCond %{HTTP:Accept-Language} !^(en.*|ru.*|cs.*|hu.*|pl.*|fr.*|zh.*|vi.*|ja.*|es.*|it.*|et.*|ne.*|bn.*) [NC]
RewriteRule ^$ http://%{HTTP_HOST}/en/ [L,R=301]

# Добавление слэша в конце языка: /ru -> /ru/
RewriteCond %{REQUEST_URI} ^/(www/)?(en|ru|cs|hu|pl|fr|zh_CN|vi|ja|es|it|et|ne|bn)$ [NC]
RewriteRule ^(.*)$ http://%{HTTP_HOST}/$1/ [L,R=301]

